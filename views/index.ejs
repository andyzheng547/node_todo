<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Node Todo</title>
  </head>
  <body>
    <ul class="todos">
      <% for(var i = 0; i < todos.length; i++) { %>
        <li class="todo" data-id="<%= todos[i]._id %>">
          <span id="todo_<%= todos[i]._id %>"><%= todos[i].todo %></span>

          <button type="button" class="toggle-update" data-id="<%= todos[i]._id %>">Update</button>

          <form class="update-todo" data-id="<%= todos[i]._id %>" style="display: none">
            <input type="text" name="todo" value="<%= todos[i].todo %>">
            <input type="submit" name="Update">
          </form>

          <button type="button" class="delete-todo" data-id="<%= todos[i]._id %>">Delete</button>
        </li>
      <% } %>
    </ul>

    <form id="create-todo">
      <input type="text" name="todo" placeholder="Enter a thing to do">
      <input type="submit" name="Create">
    </form>

    <script src="/jquery/jquery.js"></script>
    <script src="main.js"></script>
  </body>
</html>
